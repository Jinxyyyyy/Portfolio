# temperature converter from Celsius to Fahrenheit and vice versa

def temperatureConverter():
    degree = int(input (f"Enter a number for the degree:"))
    unit = input (f"Enter a unit(F or C):")

    if unit == "F":
        conversion = (degree - 32) * 5 / 9
        print(f"{degree} {unit} is equal to {conversion} celsius")
    elif unit == "C":
        conversion = (degree * 9 / 5) + 32
        print(f"{degree} {unit} is equal to {conversion} celsius")
    else:
        print(f"{unit} is not valid")

temperatureConverter()
