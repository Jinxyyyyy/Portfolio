# shopping cart program

def shoppingCart():

    foods = []
    prices = []
    total = 0

    while True:
        food = input("Enter a food to buy(press q to quit):")
        if food == "q":
           break
        else:
            price = (float(input(f"Enter the price of the {food}:")))
            foods.append(food)
            prices.append(price)
            total += price

    print("--- YOUR CART ---")
    for food in foods:
        print(food)
    print(f"Your total is ${total}")
shoppingCart()
